{{#section 'js'}}
<script src="https://cdn.quilljs.com/1.3.7/quill.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    let quillEditor;
    let currentProductId = null;
    let currentProductName = '';
    
    // Initialize Quill editor when modal is shown
    $('#appendDescModal').on('shown.bs.modal', function() {
        if (!quillEditor) {
            quillEditor = new Quill('#quill-editor-container', {
                theme: 'snow',
                placeholder: 'Enter additional description...',
                modules: {
                    toolbar: [
                        [{ 'header': [1, 2, 3, false] }],
                        ['bold', 'italic', 'underline', 'strike'],
                        [{ 'list': 'ordered'}, { 'list': 'bullet' }],
                        [{ 'color': [] }, { 'background': [] }],
                        ['link', 'image'],
                        ['clean']
                    ]
                }
            });
        } else {
            quillEditor.setContents([]);
        }
    });
    
    // Handle append description button click
    $('.btn-append-desc').on('click', function(e) {
        e.preventDefault();
        currentProductId = $(this).data('id');
        currentProductName = $(this).data('name');
        
        $('#modalProductName').text(currentProductName);
        $('#appendDescModal').modal('show');
    });
    
    // Handle save append description
    $('#btnSaveAppendDesc').on('click', function() {
        const description = quillEditor.root.innerHTML.trim();
        
        if (!description || description === '<p><br></p>') {
            Swal.fire({
                icon: 'warning',
                title: 'Empty Description',
                text: 'Please enter some description content.'
            });
            return;
        }
        
        // Send AJAX request to append description
        $.ajax({
            url: `/seller/products/${currentProductId}/append-description`,
            method: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({
                description: description
            }),
            success: function(response) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success!',
                    text: response.message || 'Description appended successfully.',
                    timer: 1500,
                    showConfirmButton: false
                });
                $('#appendDescModal').modal('hide');
            },
            error: function(xhr) {
                const errorMessage = xhr.responseJSON?.message || 'Failed to append description.';
                Swal.fire({
                    icon: 'error',
                    title: 'Error!',
                    text: errorMessage
                });
            }
        });
    });
    
