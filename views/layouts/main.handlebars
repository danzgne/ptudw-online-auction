<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{#if title}}{{title}} | {{/if}}Online Auction</title>

    <!-- Common CSS -->
    <link rel="stylesheet" type="text/css" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="/static/css/main.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500&family=Lato:wght@300;400;700&display=swap" rel="stylesheet">

    <!-- Modernizr -->
    <script src="/static/js/modernizr.js"></script>

    {{{_sections.css}}}
    
    <!-- CSS riêng cho Admin nếu đang ở chế độ Admin -->
    {{#if isAdminMode}}
    <style>
        body { background-color: #f4f6f9; }
        .admin-navbar { background-color: #212529; z-index: 1030; }
        .sidebar-container { min-height: calc(100vh - 56px); background-color: #fff; border-right: 1px solid #dee2e6; }
        .admin-main-content { padding: 20px; }
    </style>
    {{/if}}
</head>

<body data-bs-spy="scroll" data-bs-target="#navbar" tabindex="0" class="d-flex flex-column min-vh-100">

    {{> svg-icons}}
    
    {{> header}}

    <main id="main-content" style="padding-top: 100px;">
        {{{body}}}
    </main>

    {{> footer}}

    <!-- Search Modal (Chỉ cần cho Client) -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title">Search Products</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form action="/products/search" method="GET" class="d-flex">
                        <input class="form-control me-2" type="search" name="q" placeholder="Type keywords..." id="searchInput" required>
                        <button class="btn btn-primary text-uppercase" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/static/js/jquery-1.11.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="/static/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" src="/static/js/script.js"></script>

    {{{_sections.js}}}
    
    {{!-- Script riêng cho Search Modal (chỉ chạy khi có modal) --}}
    <script>
      const searchModal = document.getElementById('searchModal')
      const searchInput = document.getElementById('searchInput')
      if (searchModal && searchInput) {
        searchModal.addEventListener('shown.bs.modal', () => searchInput.focus())
      }
    </script>
</body>
</html>