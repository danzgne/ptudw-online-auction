<div class="container mt-2">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="display-header d-flex justify-content-between align-items-center pb-3">
        <div>
          <h2 class="display-7 text-dark text-uppercase mb-0">
            {{#if currentCategory}}
              {{currentCategory.name}}
            {{else}}
              RESULTS
            {{/if}}
          </h2>
          <small class="text-muted mt-2">{{products.length}} products</small>
        </div>
      </div>
      <hr class="my-2">
    </div>
  </div>

  <div class="row">
    <!-- Sidebar Categories -->
    <aside class="col-lg-3 mb-5 mb-lg-0">
      <div class="sidebar-widget">
        <h5 class="widget-title text-uppercase mb-4 pb-2" style="border-bottom: 2px solid var(--primary-color); padding-bottom: 10px;">
          Filter by Category
        </h5>
        <ul class="list-unstyled category-list">
          <li class="mb-2">
            <a href="/products" class="text-decoration-none text-dark sidebar-link 
              {{#if (eq currentCategory null)}}
                active fw-bold text-primary
              {{/if}} fs-4">
              All Products
            </a>
          </li>
          {{#each lcCategories1}}
          <li class="mb-3">
            <a href="/category/{{this.id}}" class="text-decoration-none text-dark sidebar-link fw-6 fs-4">
              {{this.name}}
            </a>
            {{#if (eq this.id currentCategory.id)}}
            <span class="badge bg-primary ms-2">Active</span>
            {{/if}}
            
            {{!-- Subcategories --}}
            {{#if ../lcCategories2}}
            <ul class="list-unstyled ms-3 mt-2 small fs-5">
              {{#each ../lcCategories2}}
                {{#if (eq this.parent_id ../id)}}
                <li class="mb-2">
                  <a href="/category/{{this.id}}" class="text-decoration-none text-muted sub-link">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" 
                      fill="currentColor" class="bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                      <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0M4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5z"/>
                    </svg>
                    {{this.name}}
                  </a>
                </li>
                {{/if}}
              {{/each}}
            </ul>
            {{/if}}
          </li>
          {{/each}}
        </ul>
      </div>
    </aside>

    <!-- Products Grid -->
    <div class="col-lg-9">
      {{#if (eq products.length 0)}}
      <!-- Empty State -->
      <div class="alert alert-info text-center py-5 rounded">
        <h5 class="mb-3">No products found</h5>
        <p class="text-muted mb-4">Try another category or search term</p>
        <a href="/" class="btn btn-primary">Back to Home</a>
      </div>
      {{else}}
      <!-- Products Grid -->
      <div class="row g-4">
        {{#each products}}
        <div class="col-md-6 col-xl-4">
          <div class="product-card h-100 position-relative shadow-sm rounded overflow-hidden" style="transition: all 0.3s ease;">
            
            <!-- Product Image -->
            <div class="image-holder position-relative overflow-hidden" style="height: 280px; background: linear-gradient(135deg, #EDF1F3 0%, #F3F3F3 100%);">
              {{#if this.thumbnail}}
                <img src="{{this.thumbnail}}" alt="{{this.name}}" class="img-fluid w-100 h-100" style="object-fit: cover;">
              {{else}}
                <div class="d-flex align-items-center justify-content-center h-100">
                  <svg style="width: 80px; height: 80px; opacity: 0.3;">
                    <use xlink:href="#shopping-bag"></use>
                  </svg>
                </div>
              {{/if}}

              <!-- Watchlist Button (Hover) -->
              <div class="cart-concern position-absolute w-100 d-flex align-items-center justify-content-center" style="bottom: 0; height: 60px; background: rgba(0,0,0,0.8); opacity: 0; transition: opacity 0.3s ease;">
                <a href="/products/{{this.id}}" class="btn btn-small btn-light text-uppercase">
                  View Details
                  <svg style="width: 14px; height: 14px; margin-left: 6px;">
                    <use xlink:href="#chevron-right"></use>
                  </svg>
                </a>
              </div>

              <!-- Status Badge -->
              {{#if this.status}}
              <div class="position-absolute top-0 start-0 m-2">
                <span class="badge bg-primary">{{this.status}}</span>
              </div>
              {{/if}}
            </div>

            <!-- Product Info -->
            <div class="card-body p-3 d-flex flex-column">
              <!-- Product Title -->
              <h5 class="card-title mb-2">
                <a href="/products/{{this.id}}" class="text-decoration-none text-dark text-uppercase" style="font-size: 0.95em; font-weight: 600;">
                  {{this.name}}
                </a>
              </h5>

              <!-- Divider -->
              <hr class="my-2">

              <!-- Price & Bids Section -->
              <div class="d-flex justify-content-between align-items-center mt-auto mb-3">
                <div>
                  {{#if this.currentPrice}}
                  <p class="small text-muted mb-1">Current Price:</p>
                  <span class="h6 text-primary fw-bold">${{this.currentPrice}}</span>
                  {{/if}}
                </div>
                {{#if this.bidCount}}
                <div class="text-center">
                  <p class="small text-muted mb-0">{{this.bidCount}}</p>
                  <p class="small fw-bold text-uppercase" style="color: var(--accent-color);">Bids</p>
                </div>
                {{/if}}
              </div>

              <!-- Time Remaining -->
              {{#if this.timeRemaining}}
              <p class="small text-warning mb-3">
                <strong>Ends:</strong> {{this.timeRemaining}}
              </p>
              {{/if}}

              <!-- Action Button -->
              <a href="/products/{{this.id}}" class="btn btn-small btn-outline-primary w-100 text-uppercase" style="font-size: 0.85em; padding: 0.6rem;">
                Place Bid
              </a>
            </div>

            <!-- Hover Script -->
            <script>
              document.addEventListener('DOMContentLoaded', function() {
                const card = this.closest('.product-card');
                if (card) {
                  const imageHolder = card.querySelector('.image-holder');
                  const cartConcern = card.querySelector('.cart-concern');
                  if (imageHolder && cartConcern) {
                    imageHolder.addEventListener('mouseenter', () => cartConcern.style.opacity = '1');
                    imageHolder.addEventListener('mouseleave', () => cartConcern.style.opacity = '0');
                  }
                }
              });
            </script>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
</div>

<!-- Product List Styles -->
<style>
  .sidebar-widget {
    background: var(--light-blue-color);
    padding: 20px;
    border-radius: 8px;
    height: fit-content;
    position: sticky;
    top: 130px;
  }

  .category-list a.sidebar-link {
    display: block;
    padding: 8px 0;
    color: var(--accent-color);
    font-size: 0.95em;
    transition: all 0.3s ease;
    border-left: 3px solid transparent;
    padding-left: 10px;
  }

  .category-list a.sidebar-link:hover,
  .category-list a.sidebar-link.active {
    color: var(--primary-color);
    border-left-color: var(--primary-color);
  }

  .category-list a.sub-link {
    font-size: 0.9em !important;
    padding: 6px 0 !important;
    padding-left: 0 !important;
    border-left: none !important;
    color: var(--gray-color-500) !important;
  }

  .category-list a.sub-link:hover {
    color: var(--primary-color) !important;
  }

  .product-card {
    background: #fff;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15) !important;
  }

  .product-card .card-title a:hover {
    color: var(--primary-color) !important;
  }

  .btn-outline-primary {
    border-color: var(--primary-color);
    color: var(--primary-color);
    transition: all 0.3s ease;
  }

  .btn-outline-primary:hover {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: #fff;
  }

  .widget-title {
    font-weight: 700;
    letter-spacing: 1px;
  }

  @media (max-width: 992px) {
    .sidebar-widget {
      position: static;
      top: auto;
      margin-bottom: 30px;
    }
  }

  @media (max-width: 768px) {
    .product-card .image-holder {
      height: 220px;
    }

    .display-header {
      flex-direction: column;
      align-items: flex-start !important;
      gap: 1rem;
    }
  }
</style>
