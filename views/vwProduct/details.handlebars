        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <h6 class="fw-bold mb-2">
              <i class="bi bi-shop" style="color: #72AEC8;"></i> Seller Information
            </h6>
            <h5 class="fw-bold mb-1">{{product.seller_name}}</h5>
            <small class="text-success d-flex align-items-center gap-1">
              <i class="bi bi-check-circle-fill"></i> Verified Seller
            </small>
          </div>
        </div>
        <small class="text-muted d-block">
          <i class="bi bi-star-fill text-warning"></i> {{round (multiply rating_point 5) 1}}/5 • Member since {{format_date product.seller_created_at}}
        </small>
      </div>
    </div>
  </div>

  <!-- Product Description Section -->
  <div class="row mt-5">
    <div class="col-lg-8">
      <div class="description-section bg-white p-5 rounded-4 border mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4" onclick="toggleDescription()" style="cursor: pointer;">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-file-text" style="color: #72AEC8;"></i> Product Description
          </h3>
          <button id="descriptionToggle" class="btn btn-link p-0" style="color: #72AEC8; text-decoration: none;">
            <i class="bi bi-chevron-up"></i>
          </button>
        </div>
        <div id="descriptionContent">
          <p class="text-muted" style="line-height: 1.8; font-size: 1.05rem;">
            {{#if product.description}}
              {{{product.description}}}
            {{else}}
              <em>No description provided for this product.</em>
            {{/if}}
          </p>
          
          {{!-- Description Updates --}}
          {{#if descriptionUpdates}}
            {{#each descriptionUpdates}}
              <div class="mt-4 p-3 border-start border-3 border-warning bg-light rounded">
                <div class="d-flex align-items-center mb-2">
                  <i class="bi bi-pencil-square text-warning me-2"></i>
                  <strong class="text-warning">{{format_date this.created_at}}</strong>
                </div>
                <div class="text-muted" style="line-height: 1.8;">
                  {{{this.content}}}
                </div>
              </div>
            {{/each}}
          {{/if}}
        </div>
      </div>

      <!-- Product Details Tab -->
      <div class="details-section bg-white p-5 rounded-4 border mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4" onclick="toggleDetails()" style="cursor: pointer;">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-info-circle" style="color: #72AEC8;"></i> Product Details
          </h3>
          <button id="detailsToggle" class="btn btn-link p-0" style="color: #72AEC8; text-decoration: none;">
            <i class="bi bi-chevron-up"></i>
          </button>
        </div>
        <div id="detailsContent">
          <div class="table-responsive">
          <table class="table table-borderless">
            <tbody>
              {{!-- <tr class="border-bottom"> --}}
                {{!-- <td class="fw-bold text-muted" style="width: 30%;">Product ID</td> --}}
                {{!-- <td class="fw-500"> --}}
                  {{!-- product id --}}
                {{!-- </td> --}}
              {{!-- </tr> --}}
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Category</td>
                <td class="fw-500">{{product.category_name}}</td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Condition</td>
                <td><span class="badge bg-info" style="background-color: #72AEC8 !important;">Like New</span></td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Auction Start</td>
                <td class="fw-500">{{format_date product.created_at}}</td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Auction End</td>
                <td class="fw-500">{{format_date product.end_at}}</td>
              </tr>
              <tr>
                <td class="fw-bold text-muted">Starting Price</td>
                <td class="fw-bold" style="color: #72AEC8;">$ {{format_number product.starting_price}}</td>
              </tr>
            </tbody>
          </table>
          </div>
        </div>
      </div>

      <!-- Comments Section -->
      <div id="comments" class="comments-section bg-white p-5 rounded-4 border">
        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-bold mb-0">
            <i class="bi bi-chat-dots" style="color: #72AEC8;"></i> Questions & Answers
          </h3>
        </div>

        {{#if isAuthenticated}}
          {{#if (ne authUser.id product.seller_id)}}
            <!-- Comment Form -->
            <div class="comment-form mb-4">
              <form action="/products/comment" method="POST">
                <input type="hidden" name="productId" value="{{product.id}}">
                <div class="mb-3">
                  <textarea 
                    class="form-control" 
                    name="content" 
                    rows="3" 
                    placeholder="Ask a question about this product..."
                    required
                    maxlength="500"></textarea>
                </div>
                <div class="text-end">
                  <button type="submit" class="btn btn-primary" style="background-color: #72AEC8; border: none;">
                    <i class="bi bi-send me-2"></i>Post Question
                  </button>
                </div>
              </form>
            </div>
            <hr class="my-4">
          {{/if}}
        {{else}}
          <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i>
            <a href="/account/signin?retUrl=/products/detail?id={{product.id}}" class="alert-link">Signin</a> to ask questions about this product
          </div>
        {{/if}}

        <!-- Comments List -->
        {{#if comments.length}}
          <div class="comments-list">
            {{#each comments}}
              <div class="comment-item mb-4 pb-4 border-bottom">
                <div class="d-flex align-items-start">
                  <div class="flex-shrink-0 me-3">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-2" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center;">
                      <i class="bi bi-person-fill" style="color: #667eea; font-size: 1.5rem;"></i>
                    </div>
                  </div>
                  <div class="flex-grow-1">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <div>
                        <strong>{{user_name}}</strong>
                        {{#if (eq user_role 'seller')}}
                          {{!-- <span class="badge bg-success ms-2">Seller</span> --}}
                        {{/if}}
                        <br>
                        <small class="text-muted">{{format_date created_at}}</small>
                      </div>
                    </div>
                    <p class="mb-2">{{content}}</p>
                    
                    {{!-- Only show reply button if current user is the seller of this product, not replying to themselves, and the question hasn't been answered yet --}}
                    {{#if (and ../isAuthenticated (eq ../authUser.role 'seller') (eq ../product.seller_id ../authUser.id) (ne user_id ../authUser.id) (eq replies.length 0))}}
                      <button class="btn btn-sm reply-btn" data-comment-id="{{id}}" data-user-name="{{user_name}}" style="background-color: #72AEC8; color: white; border: none; border-radius: 6px; padding: 4px 12px; font-weight: 500; transition: all 0.3s ease;">
                        <i class="bi bi-reply me-1"></i>Reply
                      </button>

                      <!-- Reply Form (Hidden by default) -->
                      <div class="reply-form mt-3" id="reply-form-{{id}}" style="display: none;">
                        <form action="/products/comment" method="POST">
                          <input type="hidden" name="productId" value="{{../product.id}}">
                          <input type="hidden" name="parentId" value="{{id}}">
                          <div class="mb-2 reply-textarea-wrapper">
                            <div 
                              class="form-control form-control-sm reply-input" 
                              contenteditable="true"
                              data-comment-id="{{id}}"
                              placeholder="Write a reply..."
                              style="min-height: 50px; max-height: 200px; overflow-y: auto; white-space: pre-wrap; word-wrap: break-word;"></div>
                            <input type="hidden" name="content" class="reply-content-hidden" value="">
                          </div>
                          <div class="text-end">
                            <button type="button" class="btn btn-sm btn-secondary cancel-reply" data-comment-id="{{id}}" style="min-width: 80px; padding: 6px 16px; height: 32px;">Cancel</button>
                            <button type="submit" class="btn btn-sm btn-primary reply-submit" style="background-color: #72AEC8; border: none; min-width: 80px; padding: 6px 16px; height: 32px;">Reply</button>
                          </div>
                        </form>
                      </div>
                    {{/if}}
                  </div>
                </div>
              </div>

              {{!-- Display replies --}}
              {{#if replies.length}}
                {{#each replies}}
                  <div class="comment-item mb-4 pb-4 border-bottom">
                    <div class="d-flex align-items-start">
                      <div class="flex-shrink-0 me-3">
                        <div class="rounded-circle reply-avatar p-2" style="width: 45px; height: 45px; display: flex; align-items: center; justify-content: center; background: #fff; border: 3px solid #72AEC8;">
                          <i class="bi bi-person-fill" style="color: #72AEC8; font-size: 1.5rem;"></i>
                        </div>
                      </div>
                      <div class="flex-grow-1">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                          <div>
                            <strong>{{user_name}}</strong>
                            {{#if (eq user_role 'seller')}}
                              {{!-- <span class="badge bg-success ms-2">Seller</span> --}}
                            {{/if}}
                            {{#if (eq user_id ../../product.seller_id)}}
                              <span class="badge bg-success ms-2">
                                <i class="bi bi-star-fill"></i> Seller
                              </span>
                            {{/if}}
                            <br>
                            <small class="text-muted">{{format_date created_at}}</small>
                          </div>
                        </div>
                        <p class="mb-0">{{content}}</p>
                      </div>
                    </div>
                  </div>
                {{/each}}
              {{/if}}
            {{/each}}
          </div>

          <!-- Pagination -->
          {{#if (gt totalPages 1)}}
            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top">
              <div class="text-muted">
                <small><i class="bi bi-chat-dots-fill me-1" style="color: #72AEC8;"></i>Page <strong>{{commentPage}}</strong> of <strong>{{totalPages}}</strong> </small>
              </div>
              <nav aria-label="Comments pagination">
                <ul class="pagination pagination-sm mb-0" style="gap: 5px;">
                  {{#if (gt commentPage 1)}}
                    <li class="page-item">
                      <a class="page-link rounded-3" href="/products/detail?id={{product.id}}&commentPage={{subtract commentPage 1}}#comments" aria-label="Previous" style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 12px; transition: all 0.3s;">
                        <i class="bi bi-chevron-left"></i>
                      </a>
                    </li>
                  {{else}}
                    <li class="page-item disabled">
                      <span class="page-link rounded-3" style="border: 2px solid #e9ecef; color: #ccc; padding: 8px 12px;">
                        <i class="bi bi-chevron-left"></i>
                      </span>
                    </li>
                  {{/if}}

                  {{#each (range 1 (add totalPages 1))}}
                    {{#if (eq this ../commentPage)}}
                      <li class="page-item active">
                        <span class="page-link rounded-3" style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: none; color: white; font-weight: 600; padding: 8px 14px; box-shadow: 0 2px 8px rgba(114, 174, 200, 0.3);">{{this}}</span>
                      </li>
                    {{else}}
                      <li class="page-item">
                        <a class="page-link rounded-3" href="/products/detail?id={{../product.id}}&commentPage={{this}}#comments" style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 14px; transition: all 0.3s;">{{this}}</a>
                      </li>
                    {{/if}}
                  {{/each}}

                  {{#if (lt commentPage totalPages)}}
                    <li class="page-item">
                      <a class="page-link rounded-3" href="/products/detail?id={{product.id}}&commentPage={{add commentPage 1}}#comments" aria-label="Next" style="border: 2px solid #72AEC8; color: #72AEC8; font-weight: 600; padding: 8px 12px; transition: all 0.3s;">
                        <i class="bi bi-chevron-right"></i>
                      </a>
                    </li>
                  {{else}}
                    <li class="page-item disabled">
                      <span class="page-link rounded-3" style="border: 2px solid #e9ecef; color: #ccc; padding: 8px 12px;">
                        <i class="bi bi-chevron-right"></i>
                      </span>
                    </li>
                  {{/if}}
                </ul>
              </nav>
            </div>
          {{/if}}
        {{else}}
          <div class="text-center text-muted py-5">
            <i class="bi bi-chat-dots" style="font-size: 3rem; opacity: 0.3;"></i>
            <p class="mt-3">No questions yet. Be the first to ask!</p>
          </div>
        {{/if}}
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <!-- Bidding History Section -->
      <div class="bidding-history-section bg-white p-4 rounded-4 border sticky-top" style="top: 90px; z-index: 10;">
        <div class="d-flex justify-content-between align-items-center mb-3 pb-3 border-bottom flex-nowrap">
          <h5 class="fw-bold mb-0 me-2" style="white-space: nowrap;">
            <i class="bi bi-clock-history" style="color: #72AEC8;"></i> Bidding History
          </h5>
          {{#if isAuthenticated}}
            <a href="/products/bidding-history?id={{product.id}}" class="btn btn-sm fw-bold flex-shrink-0" style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: none; color: white;">
              <i class="bi bi-list-ul me-1"></i>View Full
            </a>
          {{else}}
            <a href="/account/signin?retUrl=/products/bidding-history?id={{product.id}}" class="btn btn-outline-primary flex-shrink-0">
              <span class="btn-text"><i class="bi bi-lock-fill me-1"></i>Signin</span>
            </a>
          {{/if}}
        </div>

        <div class="text-center text-muted py-4">
          <i class="bi bi-clock-history" style="font-size: 3rem; opacity: 0.3;"></i>
          <p class="mt-3">{{#if isAuthenticated}}Click "View Full" to see all bids{{else}}Signin to view bidding history{{/if}}</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Products Section -->
  <div class="row mt-5">
    <div class="col-12">
      <h3 class="fw-bold mb-4">
        <i class="bi bi-box-seam" style="color: #72AEC8;"></i> Related Products
      </h3>
      <div class="related-section">
        <div class="row g-4">
          <!-- Related Product Card -->
          {{#each related_products}}
          <div class="col-md-3">
            <a href="/products/detail?id={{this.id}}" class="text-decoration-none">
              <div class="related-product-card h-100 rounded-4 overflow-hidden shadow-sm border-0" style="transition: transform 0.3s ease, box-shadow 0.3s ease; cursor: pointer;">
                <div class="image-wrapper position-relative" style="height: 220px; overflow: hidden; background-color: #f8f9fa;">
                  <img src="/static/{{this.thumbnail}}" alt="Related Product" class="w-100 h-100" style="object-fit: cover;">
                  <div class="overlay"></div>
                </div>
                <div class="p-3">
                  <h6 class="fw-bold text-truncate mb-2 text-dark">{{this.name}}</h6>
                  <div class="d-flex justify-content-between align-items-center">
                    <p class="text-primary fw-bold mb-0" style="color: #72AEC8 !important;">$ {{format_number this.current_price}}</p>
                  </div>
                </div>
              </div>
            </a>
          </div>  
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Lightbox Gallery Modal -->
<div id="lightbox" class="lightbox" style="display: none;">
  <button class="lightbox-close" onclick="closeLightbox()" title="Close (Esc)">
    <i class="bi bi-x-lg"></i>
  </button>
  
  <button class="lightbox-nav lightbox-prev" onclick="prevImage()" title="Previous">
    <i class="bi bi-chevron-left"></i>
  </button>
  
  <div class="lightbox-content">
    <img id="lightboxImage" src="" alt="Gallery Image" class="lightbox-img">
    <div class="lightbox-counter">
      <span id="currentImageNum">1</span> / <span id="totalImageNum">{{add 1 (length product.sub_images)}}</span>
    </div>
  </div>
  
  <button class="lightbox-nav lightbox-next" onclick="nextImage()" title="Next">
    <i class="bi bi-chevron-right"></i>
  </button>
</div>

<!-- Bid Modal -->
<div class="modal fade" id="bidModal" tabindex="-1" aria-labelledby="bidModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content border-0 shadow-lg">
      <div class="modal-header border-0 pb-0">
        <h5 class="modal-title fw-bold" id="bidModalLabel">
          <i class="bi bi-hammer" style="color: #72AEC8;"></i> Place Your Bid
        </h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body px-4 py-4">
        <div class="alert alert-info border-0 mb-4" style="background-color: rgba(114, 174, 200, 0.1);">
          <div class="d-flex align-items-center">
            <i class="bi bi-info-circle-fill me-2" style="color: #72AEC8;"></i>
            <div>
              <strong>Current Price:</strong> <span id="modalCurrentPrice">{{format_number product.current_price}}</span> VND
            </div>
          </div>
        </div>

        <form id="bidForm" action="/products/bid" method="POST">
          <input type="hidden" name="productId" value="{{product.id}}">
          <input type="hidden" name="bidAmount" id="bidAmountRaw" value="">
          
          <div class="mb-4">
            <label for="bidAmount" class="form-label fw-bold">Your Bid Amount</label>
            <div class="input-group input-group-lg">
              <input 
                type="text" 
                class="form-control" 
                id="bidAmount" 
                placeholder="Enter bid amount"
                required
                autofocus
                inputmode="numeric"
                pattern="[0-9,]*">
              <span class="input-group-text bg-light">
                VND
              </span>
            </div>
            <small class="text-muted">
              <i class="bi bi-lightbulb"></i> Minimum increment: {{format_number product.step_price}} VND
            </small>
          </div>

          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-lg fw-bold" id="submitBidBtn" style="background-color: #72AEC8; color: white; border: none;">
              <i class="bi bi-check-circle"></i> Confirm Bid
            </button>
            <button type="button" class="btn btn-lg btn-outline-secondary" data-bs-dismiss="modal">
              Cancel
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>