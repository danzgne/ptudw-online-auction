            <tbody>
              <tr class="border-bottom">
                <td class="fw-bold text-muted" style="width: 30%;">Product ID</td>
                <td class="fw-500">{{product.id}}</td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Category</td>
                <td class="fw-500">{{product.category_name}}</td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Condition</td>
                <td><span class="badge bg-info" style="background-color: #72AEC8 !important;">Like New</span></td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Auction Start</td>
                <td class="fw-500">{{format_date product.created_at}}</td>
              </tr>
              <tr class="border-bottom">
                <td class="fw-bold text-muted">Auction End</td>
                <td class="fw-500">{{format_date product.end_at}}</td>
              </tr>
              <tr>
                <td class="fw-bold text-muted">Starting Price</td>
                <td class="fw-bold" style="color: #72AEC8;">$ {{format_number product.starting_price}}</td>
              </tr>
            </tbody>
          </table>
          </div>
        </div>
      </div>

      <!-- Q&A Section -->
      <div class="qa-section bg-white p-5 rounded-4 border mt-5">
        <h3 class="fw-bold mb-4">
          <i class="bi bi-chat-dots" style="color: #72AEC8;"></i> Questions & Answers
        </h3>
        
        <!-- Q&A List -->
        <div class="qa-list">
          {{#if product.questions}}
            {{#each product.questions}}
              <div class="qa-item mb-4 pb-4 border-bottom">
                <div class="question mb-3">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h6 class="fw-bold mb-0">{{this.user_name}}</h6>
                    <small class="text-muted">{{format_date this.created_at}}</small>
                  </div>
                  <p class="text-muted mb-0">{{this.question_text}}</p>
                </div>
                
                {{#if this.answer_text}}
                  <div class="answer ms-4 ps-3 border-start" style="border-color: #72AEC8 !important;">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <h6 class="fw-bold mb-0" style="color: #72AEC8;">
                        <i class="bi bi-check-circle-fill"></i> Seller's Answer
                      </h6>
                      <small class="text-muted">{{format_date this.answer_date}}</small>
                    </div>
                    <p class="text-muted mb-0">{{this.answer_text}}</p>
                  </div>
                {{else}}
                  <div class="ms-4 ps-3 border-start" style="border-color: #dc3545 !important;">
                    <small class="text-danger">
                      <i class="bi bi-exclamation-circle"></i> Awaiting seller's answer
                    </small>
                  </div>
                {{/if}}
              </div>
            {{/each}}
          {{else}}
            <div class="alert alert-info" role="alert">
              <i class="bi bi-info-circle"></i> No questions yet. Be the first to ask!
            </div>
          {{/if}}
        </div>

        <!-- Ask Question Button -->
        <div class="mt-4">
          <button class="btn btn-lg fw-bold w-100" style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: 2px solid #72AEC8; color: white;">
            <i class="bi bi-pencil-square"></i> Ask a Question
          </button>
        </div>
      </div>

      <!-- Reviews Section -->
      <div class="reviews-section bg-white p-5 rounded-4 border mt-5">
        <h3 class="fw-bold mb-4">
          <i class="bi bi-star-fill" style="color: #72AEC8;"></i> Customer Reviews
        </h3>

        <!-- Overall Rating -->
        <div class="overall-rating mb-5 pb-5 border-bottom">
