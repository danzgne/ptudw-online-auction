            </div>
            <div class="col-md-9">
              <div class="rating-bars">
                <div class="rating-bar mb-3">
                  <div class="d-flex align-items-center gap-3">
                    <small class="text-muted" style="width: 50px;">5 <i class="bi bi-star-fill text-warning"></i></small>
                    <div class="progress flex-grow-1" style="height: 8px;">
                      <div class="progress-bar" style="width: 65%; background-color: #72AEC8;"></div>
                    </div>
                    <small class="text-muted">15</small>
                  </div>
                </div>
                <div class="rating-bar mb-3">
                  <div class="d-flex align-items-center gap-3">
                    <small class="text-muted" style="width: 50px;">4 <i class="bi bi-star-fill text-warning"></i></small>
                    <div class="progress flex-grow-1" style="height: 8px;">
                      <div class="progress-bar" style="width: 25%; background-color: #72AEC8;"></div>
                    </div>
                    <small class="text-muted">6</small>
                  </div>
                </div>
                <div class="rating-bar mb-3">
                  <div class="d-flex align-items-center gap-3">
                    <small class="text-muted" style="width: 50px;">3 <i class="bi bi-star-fill text-warning"></i></small>
                    <div class="progress flex-grow-1" style="height: 8px;">
                      <div class="progress-bar" style="width: 8%; background-color: #72AEC8;"></div>
                    </div>
                    <small class="text-muted">2</small>
                  </div>
                </div>
                <div class="rating-bar mb-3">
                  <div class="d-flex align-items-center gap-3">
                    <small class="text-muted" style="width: 50px;">2 <i class="bi bi-star-fill text-warning"></i></small>
                    <div class="progress flex-grow-1" style="height: 8px;">
                      <div class="progress-bar" style="width: 0%; background-color: #72AEC8;"></div>
                    </div>
                    <small class="text-muted">0</small>
                  </div>
                </div>
                <div class="rating-bar">
                  <div class="d-flex align-items-center gap-3">
                    <small class="text-muted" style="width: 50px;">1 <i class="bi bi-star-fill text-warning"></i></small>
                    <div class="progress flex-grow-1" style="height: 8px;">
                      <div class="progress-bar" style="width: 2%; background-color: #72AEC8;"></div>
                    </div>
                    <small class="text-muted">1</small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Individual Reviews -->
        <div class="reviews-list">
          {{#if product.reviews}}
            {{#each product.reviews}}
              <div class="review-item mb-4 pb-4 border-bottom">
                <div class="d-flex justify-content-between align-items-start mb-3">
                  <div>
                    <h6 class="fw-bold mb-1">{{this.reviewer_name}}</h6>
                    <div class="d-flex align-items-center gap-2">
                      <span class="text-warning small">
                        {{#each (range 1 (add 1 (round this.rating)))}}
                          <i class="bi bi-star-fill"></i>
                        {{/each}}
                        {{#if (gt (subtract this.rating (floor this.rating)) 0)}}
                          <i class="bi bi-star-half"></i>
                        {{/if}}
                      </span>
                      <small class="text-muted">{{format_date this.created_at}}</small>
                    </div>
                  </div>
                </div>
                <p class="text-muted mb-0">{{this.review_text}}</p>
              </div>
            {{/each}}
          {{else}}
            <div class="alert alert-info" role="alert">
              <i class="bi bi-info-circle"></i> No reviews yet. Be the first to review!
            </div>
          {{/if}}
        </div>

        <!-- Write Review Button -->
        <div class="mt-4">
          <button class="btn btn-lg fw-bold w-100" style="background: linear-gradient(135deg, #72AEC8 0%, #5a9ab8 100%); border: 2px solid #72AEC8; color: white;">
            <i class="bi bi-pencil-square"></i> Write a Review
          </button>
        </div>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
      <div class="sidebar-widget bg-white p-4 rounded-4 border sticky-top" style="top: 90px; z-index: 10;">
        <h5 class="fw-bold mb-4" style="color: #72AEC8;">
          <i class="bi bi-graph-up"></i> Quick Stats
        </h5>
        
        <div class="stat-item mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted small">Views</span>
            <strong class="text-dark">1,234</strong>
          </div>
          <div class="progress" style="height: 6px; background-color: #e9ecef;">
            <div class="progress-bar" style="width: 85%; background-color: #72AEC8; border-radius: 3px;"></div>
          </div>
        </div>

        <div class="stat-item mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted small">Watchers</span>
            <strong class="text-dark">89</strong>
          </div>
          <div class="progress" style="height: 6px; background-color: #e9ecef;">
            <div class="progress-bar" style="width: 45%; background-color: #72AEC8; border-radius: 3px;"></div>
          </div>
        </div>

        <div class="stat-item mb-4">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="text-muted small">Bids</span>
            <strong class="text-dark">{{product.bid_count}}</strong>
          </div>
          <div class="progress" style="height: 6px; background-color: #e9ecef;">
            <div class="progress-bar" style="width: 65%; background-color: #72AEC8; border-radius: 3px;"></div>
          </div>
        </div>

        <hr class="my-4">

        <div class="share-section">
          <h6 class="fw-bold mb-3">Share This Item</h6>
          <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary btn-sm flex-fill rounded-3" title="Share on Facebook">
              <i class="bi bi-facebook"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm flex-fill rounded-3" title="Share on Twitter">
              <i class="bi bi-twitter"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm flex-fill rounded-3" title="Share on Pinterest">
              <i class="bi bi-pinterest"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm flex-fill rounded-3" title="Copy Link">
              <i class="bi bi-link-45deg"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Products Section -->
  <div class="row mt-5">
    <div class="col-12">
      <div class="related-section">
        <h3 class="fw-bold mb-5">
          <i class="bi bi-box-seam" style="color: #72AEC8;"></i> Related Products
        </h3>
        <div class="row g-4">
          <!-- Related Product Card -->
          {{#each product.related_products}}
          <div class="col-md-3">
            <a href="/products/detail?id={{this.id}}" class="text-decoration-none">
              <div class="related-product-card h-100 rounded-4 overflow-hidden shadow-sm border-0" style="transition: transform 0.3s ease, box-shadow 0.3s ease; cursor: pointer;">
                <div class="image-wrapper position-relative" style="height: 220px; overflow: hidden; background-color: #f8f9fa;">
                  <img src="/static/{{this.thumbnail}}" alt="Related Product" class="w-100 h-100" style="object-fit: cover;">
                  <div class="overlay"></div>
                </div>
                <div class="p-3">
                  <h6 class="fw-bold text-truncate mb-2 text-dark">{{this.name}}</h6>
                  <div class="d-flex justify-content-between align-items-center">
                    <p class="text-primary fw-bold mb-0" style="color: #72AEC8 !important;">$ {{format_number this.current_price}}</p>
                  </div>
                </div>
              </div>
            </a>
          </div>  
          {{/each}}
          <!-- Repeat for more related products -->
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Lightbox Gallery Modal -->
<div id="lightbox" class="lightbox" style="display: none;">
  <button class="lightbox-close" onclick="closeLightbox()" title="Close (Esc)">
    <i class="bi bi-x-lg"></i>
  </button>
  
  <button class="lightbox-nav lightbox-prev" onclick="prevImage()" title="Previous">
    <i class="bi bi-chevron-left"></i>
  </button>
  
  <div class="lightbox-content">
    <img id="lightboxImage" src="" alt="Gallery Image" class="lightbox-img">
    <div class="lightbox-counter">
      <span id="currentImageNum">1</span> / <span id="totalImageNum">{{add 1 (length product.sub_images)}}</span>
    </div>
  </div>
  
  <button class="lightbox-nav lightbox-next" onclick="nextImage()" title="Next">
    <i class="bi bi-chevron-right"></i>
  </button>
</div>