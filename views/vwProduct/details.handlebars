          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons mb-4">
        <div class="d-grid gap-2 d-md-flex">
          
          {{!-- Nút Place Bid (Giữ nguyên) --}}
          <button class="btn btn-lg flex-fill fw-bold btn-place-bid">
            <i class="bi bi-hammer"></i> Place Bid
          </button>
          {{#if isAuthenticated}}
            {{#if product.is_favorite}}
              <form action="/products/watchlist?_method=DELETE" method="POST" class="flex-fill">
                <input type="hidden" name="productId" value="{{product.id}}">
                <button type="submit" class="btn btn-lg w-100 fw-bold btn-watch text-danger" title="Remove from Watchlist">
                  <i class="bi bi-heart-fill"></i> Watching
                </button>
              </form>

            {{else}}
              {{!-- TRƯỜNG HỢP 2: CHƯA THÍCH -> Form POST --}}
              <form action="/products/watchlist" method="POST" class="flex-fill">
                <input type="hidden" name="productId" value="{{product.id}}">
                <button type="submit" class="btn btn-lg w-100 fw-bold btn-watch" title="Add to Watchlist">
                  <i class="bi bi-heart"></i> Watch
                </button>
              </form>
            {{/if}}

          {{else}}
             {{!-- 
                TRƯỜNG HỢP 3: CHƯA ĐĂNG NHẬP
                Giữ nguyên giao diện nút nhưng chuyển thành thẻ <a> để dẫn tới trang signin
             --}}
             <a href="/account/signin?retUrl=/products/detail/{{product.id}}" class="btn btn-lg flex-fill fw-bold btn-watch d-flex align-items-center justify-content-center text-decoration-none">
                <i class="bi bi-heart me-2"></i> Watch
             </a>
          {{/if}}

        </div>
      </div>

      {{#if product.buy_now_price}}
      <div class="d-grid mb-4">
        <button class="btn btn-lg fw-bold btn-buy-now">
          <i class="bi bi-check-circle"></i> Buy Now
        </button>
      </div>
      {{/if}}

      <hr class="my-4" style="border-top: 2px solid #e9ecef;">

      <!-- Seller Info -->
