{{#section "title"}}Won Auctions{{/section}}

<div class="container-fluid mt-4 mb-5">
  <div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 mb-4">
      {{> client-sidebar}}
    </div>

    <!-- Main Content -->
    <div class="col-md-9">
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3">
          <div class="d-flex align-items-center gap-3">
            <i class="bi bi-trophy text-warning" style="font-size: 1.5rem;"></i>
            <div>
              <h4 class="mb-0 fw-bold">Won Auctions</h4>
              <small class="text-muted">Auctions you have won</small>
            </div>
          </div>
        </div>

        <div class="card-body p-4">
          {{#if products.length}}
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Product</th>
                    <th>Category</th>
                    <th>Final Price</th>
                    <th>Seller</th>
                    <th>Ended</th>
                    <th>Status</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each products}}
                  <tr>
                    <td>
                      <div class="d-flex align-items-center gap-3">
                        <img src="/static/{{this.thumbnail}}" alt="{{this.name}}" 
                             class="rounded" style="width: 60px; height: 60px; object-fit: cover;">
                        <div>
                          <div class="fw-bold">{{this.name}}</div>
                          <small class="text-muted">{{this.bid_count}} bids</small>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge bg-secondary">{{this.category_name}}</span>
                    </td>
                    <td>
                      <strong class="text-success">{{format_number this.current_price}} VND</strong>
                    </td>
                    <td>
                      <div>
                        <div class="fw-semibold">{{this.seller_name}}</div>
                        <small class="text-muted">
                          <i class="bi bi-envelope"></i> {{this.seller_email}}
                        </small>
                      </div>
                    </td>
                    <td>
                      <div class="text-muted small">
                        <i class="bi bi-calendar"></i>
                        {{#if this.closed_at}}
                          {{format_date this.closed_at}}
                        {{else}}
                          {{format_date this.end_at}}
                        {{/if}}
                      </div>
                    </td>
                    <td>
                      {{#if (eq this.status "Pending")}}
                        <span class="badge bg-warning text-dark">
                          <i class="bi bi-clock-history"></i> Pending Payment
                        </span>
                      {{else if (eq this.status "Sold")}}
                        <span class="badge bg-success">
                          <i class="bi bi-check-circle-fill"></i> Completed
                        </span>
                      {{else if (eq this.status "Cancelled")}}
                        <span class="badge bg-danger">
                          <i class="bi bi-x-circle-fill"></i> Cancelled
                        </span>
                      {{/if}}
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <a href="/products/detail?id={{this.id}}" class="btn btn-sm btn-outline-primary">
                          <i class="bi bi-eye"></i> View
                        </a>
                        {{#if (eq this.status "Pending")}}
                          <button class="btn btn-sm btn-success">
                            <i class="bi bi-credit-card"></i> Pay
                          </button>
                        {{/if}}
                      </div>
                    </td>
                  </tr>
                  {{/each}}
                </tbody>
              </table>
            </div>
          {{else}}
            <div class="text-center py-5">
              <i class="bi bi-trophy text-muted" style="font-size: 4rem;"></i>
              <h5 class="mt-3 text-muted">No Won Auctions</h5>
              <p class="text-muted">You haven't won any auctions yet.</p>
              <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-search"></i> Browse Products
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
